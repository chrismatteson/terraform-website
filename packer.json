{
  "variables": {
  },
  "builders": [
    {
      "type": "docker",
      "image": "hashicorp/middleman-hashicorp:0.3.28",
      "export_path": "image.tar",
      "volumes": {
        "{{ pwd }}/ext": "/ext",
        "{{ pwd }}/content": "/website"
      },
      "changes": [
        "ENTRYPOINT /website2/scripts/build.sh"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "mkdir /website2",
        "mkdir /ext2",
        "cp -r /website/* /website2/",
        "cp -r /ext/* /ext2/"
      ]
    }
  ]
}
